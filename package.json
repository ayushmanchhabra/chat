{
    "name": "chat",
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "vite": "vite",
        "dev:web": "vite --host --config ./vite.config.web.ts",
        "dev:api": "esbuild ./api/main.ts --outfile=./out/api/main.cjs --platform=node --bundle --watch=forever & nodemon ./out/api/main.cjs",
        "dev": "concurrently -k npm:dev:web npm:dev:api",
        "test:web": "vitest run --config ./vite.config.web.ts",
        "test:api": "vitest run --config ./vite.config.api.ts",
        "test": "concurrently npm:test:web npm:test:api"
    },
    "dependencies": {
        "@emotion/react": "^11.13.3",
        "@emotion/styled": "^11.13.0",
        "@mui/icons-material": "^6.1.2",
        "@mui/material": "^6.0.2",
        "axios": "^1.7.7",
        "cors": "^2.8.5",
        "express": "^4.21.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.26.2"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.5.0",
        "@testing-library/react": "^16.0.1",
        "@types/express": "^5.0.0",
        "@types/node": "^22.7.5",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.0",
        "@types/supertest": "^6.0.2",
        "@vitejs/plugin-react": "^4.3.2",
        "concurrently": "^9.0.1",
        "dotenv": "^16.4.5",
        "esbuild": "^0.24.0",
        "jsdom": "^25.0.1",
        "nodemon": "^3.1.7",
        "supertest": "^7.0.0",
        "typescript": "^5.6.2",
        "vite": "^5.4.8",
        "vite-tsconfig-paths": "^5.0.1",
        "vitest": "^2.1.2"
    },
    "volta": {
        "node": "22.9.0",
        "npm": "10.3.0"
    }
}
