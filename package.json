{
    "name": "chat",
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev:web": "vite --host --config ./vite.config.web.ts",
        "dev:api": "esbuild ./api/main.ts --outfile=./out/api/main.cjs --platform=node --bundle --watch & nodemon ./out/api/main.cjs",
        "dev": "concurrently npm:dev:web npm:dev:server",
        "test:web": "vitest run --config ./vite.config.web.ts",
        "test:api": "vitest run --config ./vite.config.api.ts",
        "test": "concurrently npm:test:web npm:test:api"
    },
    "dependencies": {
        "@emotion/react": "^11.13.3",
        "@emotion/styled": "^11.13.0",
        "@mui/icons-material": "^6.0.2",
        "@mui/material": "^6.0.2",
        "express": "^4.19.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.26.1"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.5.0",
        "@testing-library/react": "^16.0.1",
        "@types/express": "^4.17.21",
        "@types/node": "^22.5.4",
        "@types/react": "^18.3.5",
        "@types/react-dom": "^18.3.0",
        "@types/supertest": "^6.0.2",
        "@vitejs/plugin-react": "^4.3.1",
        "concurrently": "^8.2.2",
        "dotenv": "^16.4.5",
        "esbuild": "^0.23.1",
        "jsdom": "^25.0.0",
        "nodemon": "^3.1.4",
        "supertest": "^7.0.0",
        "typescript": "^5.5.4",
        "vite": "^5.4.3",
        "vite-tsconfig-paths": "^5.0.1",
        "vitest": "^2.0.5"
    },
    "volta": {
        "node": "22.8.0",
        "npm": "10.3.0"
    }
}
